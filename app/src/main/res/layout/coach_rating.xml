<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/text_white"
    android:layout_margin="5dp"
    app:layout_behavior="android.support.design.widget.BottomSheetBehavior">
<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:text="@string/messages_coach_rating_intro"
    android:textColor="@color/text_black"
    android:textSize="14sp"/>
    <RelativeLayout
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="10dp">
    <ImageView
        android:id="@+id/ratingimage0"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/rating_button_gray"
        android:layout_margin="2dp"
        android:clickable="true"/>
        <TextView
            android:id="@+id/tv0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/ratingimage0"
            android:layout_alignTop="@+id/ratingimage0"
            android:layout_alignRight="@+id/ratingimage0"
            android:layout_alignBottom="@+id/ratingimage0"
            android:layout_margin="1dp"
            android:gravity="center"
            android:text="0"
            android:textColor="#000000"/>
        <ImageView
            android:id="@+id/ratingimage1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/rating_button_gray"
            android:layout_toRightOf="@id/ratingimage0"
            android:layout_margin="2dp"
            android:clickable="true"
            />
        <TextView
            android:id="@+id/tv1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/ratingimage1"
            android:layout_alignTop="@+id/ratingimage1"
            android:layout_alignRight="@+id/ratingimage1"
            android:layout_alignBottom="@+id/ratingimage1"
            android:layout_margin="1dp"
            android:gravity="center"
            android:text="1"
            android:textColor="#000000" />
        <ImageView
            android:id="@+id/ratingimage2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/rating_button_gray"
            android:layout_toRightOf="@id/ratingimage1"
            android:layout_margin="2dp"/>
        <TextView
            android:id="@+id/tv2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/ratingimage2"
            android:layout_alignTop="@+id/ratingimage2"
            android:layout_alignRight="@+id/ratingimage2"
            android:layout_alignBottom="@+id/ratingimage2"
            android:layout_margin="1dp"
            android:gravity="center"
            android:text="2"
            android:textColor="#000000" />
        <ImageView
            android:id="@+id/ratingimage3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/rating_button_gray"
            android:layout_toRightOf="@id/ratingimage2"
            android:layout_margin="2dp"/>
        <TextView
            android:id="@+id/tv3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/ratingimage3"
            android:layout_alignTop="@+id/ratingimage3"
            android:layout_alignRight="@+id/ratingimage3"
            android:layout_alignBottom="@+id/ratingimage3"
            android:layout_margin="1dp"
            android:gravity="center"
            android:text="3"
            android:textColor="#000000" />
        <ImageView
            android:id="@+id/ratingimage4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/rating_button_gray"
            android:layout_toRightOf="@id/ratingimage3"
            android:layout_margin="2dp"/>
        <TextView
            android:id="@+id/t4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/ratingimage4"
            android:layout_alignTop="@+id/ratingimage4"
            android:layout_alignRight="@+id/ratingimage4"
            android:layout_alignBottom="@+id/ratingimage4"
            android:layout_margin="1dp"
            android:gravity="center"
            android:text="4"
            android:textColor="#000000" />
        <ImageView
            android:id="@+id/ratingimage5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/rating_button_gray"
            android:layout_toRightOf="@id/ratingimage4"
            android:layout_margin="2dp"/>
        <TextView
            android:id="@+id/tv5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/ratingimage5"
            android:layout_alignTop="@+id/ratingimage5"
            android:layout_alignRight="@+id/ratingimage5"
            android:layout_alignBottom="@+id/ratingimage5"
            android:layout_margin="1dp"
            android:gravity="center"
            android:text="5"
            android:textColor="#000000" />
        <ImageView
            android:id="@+id/ratingimage6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/rating_button_gray"
            android:layout_toRightOf="@id/ratingimage5"
            android:layout_margin="2dp"/>
        <TextView
            android:id="@+id/tv6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/ratingimage6"
            android:layout_alignTop="@+id/ratingimage6"
            android:layout_alignRight="@+id/ratingimage6"
            android:layout_alignBottom="@+id/ratingimage6"
            android:layout_margin="1dp"
            android:gravity="center"
            android:text="6"
            android:textColor="#000000" />
        <ImageView
            android:id="@+id/ratingimage7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/rating_button_gray"
            android:layout_toRightOf="@id/ratingimage6"
            android:layout_margin="2dp"/>
        <TextView
            android:id="@+id/tv7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/ratingimage7"
            android:layout_alignTop="@+id/ratingimage7"
            android:layout_alignRight="@+id/ratingimage7"
            android:layout_alignBottom="@+id/ratingimage7"
            android:layout_margin="1dp"
            android:gravity="center"
            android:text="7"
            android:textColor="#000000" />
        <ImageView
            android:id="@+id/ratingimage8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/rating_button_gray"
            android:layout_toRightOf="@id/ratingimage7"
            android:layout_margin="2dp"/>
        <TextView
            android:id="@+id/tv8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/ratingimage8"
            android:layout_alignTop="@+id/ratingimage8"
            android:layout_alignRight="@+id/ratingimage8"
            android:layout_alignBottom="@+id/ratingimage8"
            android:layout_margin="1dp"
            android:gravity="center"
            android:text="8"
            android:textColor="#000000" />
        <ImageView
            android:id="@+id/ratingimage9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/rating_button_gray"
            android:layout_toRightOf="@id/ratingimage8"
            android:layout_margin="2dp"/>
        <TextView
            android:id="@+id/tv9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/ratingimage9"
            android:layout_alignTop="@+id/ratingimage9"
            android:layout_alignRight="@+id/ratingimage9"
            android:layout_alignBottom="@+id/ratingimage9"
            android:layout_margin="1dp"
            android:gravity="center"
            android:text="9"
            android:textColor="#000000" />
        <ImageView
            android:id="@+id/ratingimage10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/rating_button_gray"
            android:layout_toRightOf="@id/ratingimage9"
            android:layout_margin="2dp"/>
        <TextView
            android:id="@+id/tv10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/ratingimage10"
            android:layout_alignTop="@+id/ratingimage10"
            android:layout_alignRight="@+id/ratingimage10"
            android:layout_alignBottom="@+id/ratingimage10"
            android:layout_margin="1dp"
            android:gravity="center"
            android:text="10"
            android:textColor="#000000" />
    </RelativeLayout>
    <View
        android:id="@+id/separator"
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:background="@color/common_gray_separator" />
    <Button
        android:id="@+id/bottomModalCancel"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:enabled="true"
        android:text="@string/btn_cancel"
        android:textColor="@color/common_button_blue"
        android:visibility="visible"
        android:clickable="true"
        android:textSize="18sp"
        android:background="@android:color/transparent"
        android:layout_margin="10dp" />
</LinearLayout>
