<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:id="@+id/llCarnetContainer">

        <include
            android:id="@+id/mealitem_exercisedata"
            layout="@layout/exercise_itemlist"
            android:layout_width="fill_parent"
            android:layout_height="match_parent" />

        <include
            android:id="@+id/mealitem_breakfast"
            layout="@layout/meal_itemcell"
            android:layout_width="fill_parent"
            android:layout_height="match_parent" />

        <include
            android:id="@+id/mealitem_amsnack"
            layout="@layout/meal_itemcell"
            android:layout_width="fill_parent"
            android:layout_height="match_parent" />

        <include
            android:id="@+id/mealitem_lunch"
            layout="@layout/meal_itemcell"
            android:layout_width="fill_parent"
            android:layout_height="match_parent" />

        <include
            android:id="@+id/mealitem_pmsnack"
            layout="@layout/meal_itemcell"
            android:layout_width="fill_parent"
            android:layout_height="match_parent" />

        <include
            android:id="@+id/mealitem_dinner"
            layout="@layout/meal_itemcell"
            android:layout_width="fill_parent"
            android:layout_height="match_parent" />

        <include
            android:id="@+id/mealitem_exercise"
            layout="@layout/exercise_itemcell"
            android:layout_width="fill_parent"
            android:layout_height="match_parent" />

        <include
            android:id="@+id/mealitem_water"
            layout="@layout/water_itemcell_2"
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:theme="@android:style/Theme.Holo"/>

        <include
            android:id="@+id/mealitem_mood"
            layout="@layout/mood_itemcell"
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:theme="@android:style/Theme.Holo"/>
        <include
            android:id="@+id/mealitem_moodfilled"
            layout="@layout/mood_filled_itemcell"
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:theme="@android:style/Theme.Holo"
            android:visibility="gone"/>

    </LinearLayout>

</ScrollView>