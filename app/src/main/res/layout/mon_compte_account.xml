<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include
        android:id="@+id/headermenu"
        layout="@layout/header_menu"
        android:layout_width="match_parent"
        android:layout_height="44dp" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/white">

        <RelativeLayout
            android:id="@+id/alertesContent"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:orientation="horizontal"
            android:gravity="center"
            android:background="@android:color/white">

            <Button
                android:id="@+id/alertesButton"
                android:layout_width="200dp"
                android:layout_height="30dp"
                android:clickable="true"
                style="@style/whiteNormalMedium"
                android:text="@string/button_account_alertes"
                android:textStyle="bold"
                android:background="@drawable/button_orange_bilanminceur"/>

        </RelativeLayout>

        <ScrollView
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:scrollbars="none"
            android:layout_below="@+id/alertesContent">

            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true">

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/monCompteHeader"
                    android:padding="10dp">

                    <TextView
                        style="@style/MonCompteHeader"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/mon_compte_profil" />
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@android:color/white"
                    android:padding="10dp"
                    android:weightSum="5">

                    <TextView
                        style="@style/MonCompteItems"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="2"
                        android:text="@string/mon_compte_prenom" />

                    <EditText
                        android:id="@+id/mon_name_et"
                        style="@style/MonCompteHeader"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="3"
                        android:background="@android:color/transparent"
                        android:gravity="right"
                        android:hint="@string/mon_compte_prenom" />

                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@android:color/white"
                    android:padding="10dp"
                    android:weightSum="5">


                    <TextView
                        style="@style/MonCompteItems"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/mon_compte_sexe" />


                    <TextView
                        android:id="@+id/mon_sexe_et"
                        style="@style/MonCompteHeader"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="4"
                        android:background="@android:color/transparent"
                        android:gravity="right"
                        android:hint="@string/mon_compte_sexe" />

                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/monCompteHeader"
                    android:padding="10dp">

                    <TextView
                        style="@style/MonCompteHeader"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/mon_compte_objectif" />
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@android:color/white"
                    android:padding="10dp"
                    android:weightSum="5">


                    <TextView
                        style="@style/MonCompteItems"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="3"
                        android:text="@string/mon_compte_poids_depart" />


                    <EditText
                        android:id="@+id/mon_weight_init_et"
                        style="@style/MonCompteHeader"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="2"
                        android:background="@android:color/transparent"
                        android:gravity="right"
                        android:inputType="numberDecimal"
                        android:text="80,00" />

                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@android:color/white"
                    android:padding="10dp"
                    android:weightSum="5">


                    <TextView
                        style="@style/MonCompteItems"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="3"
                        android:text="@string/mon_compte_poids_vise" />


                    <EditText
                        android:id="@+id/mon_weight_target_et"
                        style="@style/MonCompteHeader"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="2"
                        android:background="@android:color/transparent"
                        android:gravity="right"
                        android:inputType="numberDecimal"
                        android:text="60,00" />

                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@android:color/white"
                    android:padding="10dp"
                    android:weightSum="5">


                    <TextView
