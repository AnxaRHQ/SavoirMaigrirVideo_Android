                        android:layout_height="wrap_content"
                        android:layout_weight="2"
                        android:background="@android:color/transparent"
                        android:gravity="right"
                        android:inputType="numberDecimal"
                        android:text="176" />

                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/monCompteHeader"
                    android:padding="10dp">

                    <TextView
                        style="@style/MonCompteHeader"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/mon_compte_programme" />
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@android:color/white"
                    android:padding="10dp"
                    android:weightSum="5">


                    <TextView
                        style="@style/MonCompteItems"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="2"
                        android:text="@string/mon_compte_plans_repas" />


                    <TextView
                        android:id="@+id/mon_plan_et"
                        style="@style/MonCompteHeader"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="3"
                        android:background="@android:color/transparent"
                        android:gravity="right"
                        android:inputType="none"
                        android:text="Classique" />

                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@android:color/white"
                    android:padding="10dp"
                    android:weightSum="5">


                    <TextView
                        style="@style/MonCompteItems"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="3"
                        android:text="@string/mon_compte_niveau_calorique" />


                    <TextView
                        android:id="@+id/mon_calories_et"
                        style="@style/MonCompteHeader"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="2"
                        android:background="@android:color/transparent"
                        android:gravity="right"
                        android:inputType="none"
                        android:text="900 kcal" />

                </TableRow>
                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@android:color/white"
                    android:padding="10dp"
                    android:weightSum="5">


                    <TextView
