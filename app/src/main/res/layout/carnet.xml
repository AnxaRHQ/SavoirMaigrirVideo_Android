<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:orientation="vertical">

    <!-- Top Navigation Bar -->
    <include
        layout="@layout/header_menu"
        android:id="@+id/carnet_headermenu"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_alignParentTop="true" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/carnet_headermenu"
        android:background="@color/text_green"
        android:orientation="vertical">

        <anxa.com.smvideo.ui.DatePagerLayout
            android:id="@+id/meallist_header"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="#FFFFFF"
            android:scrollbars="none"
            android:clickable="false"/>
    </LinearLayout>

    <!-- content -->
    <anxa.com.smvideo.ui.CarnetList
        android:id="@+id/meallist"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_below="@+id/carnet_headermenu"
        android:layout_marginBottom="3dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="3dp"
        android:background="#ffffff" />


    <!-- end content -->
</LinearLayout>