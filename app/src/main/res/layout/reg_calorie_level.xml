<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/text_white"
    android:orientation="vertical">

    <include
        android:id="@+id/reg_header"
        layout="@layout/reg_header"
        android:layout_width="fill_parent"
        android:layout_height="44dp"
        android:layout_alignParentTop="true"
        android:background="@color/gray_bg_reg_code" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/reg_header"
        android:orientation="vertical">

        <View
            android:layout_width="fill_parent"
            android:layout_height="1px"
            android:background="@color/common_gray_separator" />

        <LinearLayout
            android:id="@+id/pers_intro_ll"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/common_button_white"
            android:orientation="vertical"
            android:paddingRight="5dp">

            <TextView
                android:id="@+id/pers_intro1_tv"
                style="@style/blackBoldLarge"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/off_white"
                android:gravity="center_vertical"
                android:paddingBottom="10dp"
                android:paddingLeft="20dp"
                android:paddingTop="10dp"
                android:text="@string/personnalisation_calorie_intro" />

            <View
                android:layout_width="fill_parent"
                android:layout_height="1px"
                android:background="@color/common_gray_separator" />

            <LinearLayout
                android:id="@+id/pers_option1_ll"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentBottom="false"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingBottom="10dp"
                android:paddingLeft="10dp"
                android:paddingTop="10dp">

                <CheckBox
                    android:id="@+id/pers_option1_cb"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:button="@drawable/pers_checkbox"
                    android:checked="true"
                    android:padding="10dp"
                    android:onClick="selectCalorieLevel"
                    android:tag="1"
                    android:layout_gravity="start"/>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingLeft="0dp">

                    <TextView
                        android:id="@+id/pers_option1_title_tv"
                        style="@style/blackBoldLarge"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@android:color/transparent"
                        android:gravity="left"
                        android:text="@string/personnalisation_calorie_900kcal"
                        android:onClick="selectCalorieLevel"
                        android:tag="1"/>

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/pers_option2_ll"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="false"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingBottom="10dp"
                android:paddingLeft="10dp"
                android:paddingTop="10dp">

                <CheckBox
                    android:id="@+id/pers_option2_cb"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:button="@drawable/pers_checkbox"
                    android:padding="10dp"
                    android:onClick="selectCalorieLevel"
                    android:tag="2"
                    android:layout_gravity="start"/>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingLeft="0dp">

                    <TextView
                        android:id="@+id/pers_option2_title_tv"
                        style="@style/blackBoldLarge"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@android:color/transparent"
                        android:gravity="left"
                        android:text="@string/personnalisation_calorie_1200kcal"
                        android:onClick="selectCalorieLevel"
                        android:tag="2"/>

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/pers_option3_ll"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="false"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingBottom="10dp"
                android:paddingLeft="10dp"
                android:paddingTop="10dp">

                <CheckBox
                    android:id="@+id/pers_option3_cb"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:button="@drawable/pers_checkbox"
                    android:padding="10dp"
                    android:onClick="selectCalorieLevel"
                    android:tag="3"
                    android:layout_gravity="start"/>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingLeft="0dp">

                    <TextView
                        android:id="@+id/pers_option3_title_tv"
                        style="@style/blackBoldLarge"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@android:color/transparent"
                        android:gravity="left"
                        android:text="@string/personnalisation_calorie_1400kcal"
                        android:onClick="selectCalorieLevel"
                        android:tag="3"/>

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/pers_option4_ll"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="false"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingBottom="10dp"
                android:paddingLeft="10dp"
                android:paddingTop="10dp">

                <CheckBox
                    android:id="@+id/pers_option4_cb"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:button="@drawable/pers_checkbox"
                    android:padding="10dp"
                    android:onClick="selectCalorieLevel"
                    android:tag="4"
                    android:layout_gravity="start"/>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingLeft="0dp">

                    <TextView
                        android:id="@+id/pers_option4_title_tv"
                        style="@style/blackBoldLarge"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@android:color/transparent"
                        android:gravity="left"
                        android:text="@string/personnalisation_calorie_1600kcal"
                        android:onClick="selectCalorieLevel"
                        android:tag="4"/>


                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/pers_option5_ll"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="false"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingBottom="10dp"
                android:paddingLeft="10dp"
                android:paddingTop="10dp">

                <CheckBox
                    android:id="@+id/pers_option5_cb"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:button="@drawable/pers_checkbox"
                    android:padding="10dp"
                    android:onClick="selectCalorieLevel"
                    android:tag="5"
                    android:layout_gravity="start"/>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingLeft="0dp">

                    <TextView
                        android:id="@+id/pers_option5_title_tv"
                        style="@style/blackBoldLarge"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@android:color/transparent"
                        android:gravity="left"
                        android:text="@string/personnalisation_calorie_1800kcal"
                        android:onClick="selectCalorieLevel"
                        android:tag="5"/>


                </LinearLayout>

            </LinearLayout>

            <View
                android:layout_width="fill_parent"
                android:layout_height="1px"
                android:background="@color/common_gray_separator" />

        </LinearLayout>

        <View
            android:layout_width="fill_parent"
            android:layout_height="1px"
            android:background="@color/common_gray_separator" />

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <Button
            android:id="@+id/reg_continuerBtn"
            style="@style/btnStyleDarkOrange"
            android:layout_width="243dp"
            android:layout_height="40dp"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/button_orange_roundedcorners"
            android:clickable="true"
            android:onClick="continueCalorieLevel"
            android:text="@string/REG_GOAL_CONTINUE_BTN" />
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_weight="1"
        android:visibility="visible">

        <ProgressBar
            android:id="@+id/progressBar_pers3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerInParent="true"
            android:indeterminateDrawable="@drawable/animateprogress"
            android:visibility="gone" />

    </RelativeLayout>

</LinearLayout>